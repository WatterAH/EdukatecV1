<body>
    <header>
        <div class="menu-bar">
            <a href="#" class="btn-menu"><span class="icon-menu"></span></a>
        </div>
        <nav>
            <ul>
                <li><a href="/inicio-admins"><span class="icon-home3"></span>Inicio</a></li>               
                <li><a href="/admin"><span class="icon-user-plus"></span>Administrar cuentas...</a></li>
                <li><a href="#" onclick="logout()"><span class="icon-exit"></span>Cerrar sesion</a></li>
            </ul>
        </nav>
    </header>

    <div class="radio">
        <input label="Maestros" type="radio" checked id="create" name="create" onclick="ad_maestro()">
        <input label="Coordinadores" type="radio" id="create" name="create" onclick="ad_coord()">
        <input label="Padres" type="radio" id="create" name="create" onclick="ad_padre()">
        <input label="Administradores" type="radio" id="create" name="create" onclick="ad_ad()">
    </div>

    <div id="maestros">
        <% if (maestros.length==0) { %>
            No hay maestros
            <% } %>
                <table>
                    <tr>
                        <% for (i=0; i < maestros.length; i++) { %>
                            <% if (i % 3==0 && i !=0) { %>
                    <tr>
                    </tr>
                    <% } %>
                        <td>
                            <div class=" card-client">
                                <div class="user-picture">
                                    <svg viewBox="0 0 448 512" xmlns="http://www.w3.org/2000/svg">
                                        <path
                                            d="M224 256c70.7 0 128-57.31 128-128s-57.3-128-128-128C153.3 0 96 57.31 96 128S153.3 256 224 256zM274.7 304H173.3C77.61 304 0 381.6 0 477.3c0 19.14 15.52 34.67 34.66 34.67h378.7C432.5 512 448 496.5 448 477.3C448 381.6 370.4 304 274.7 304z">
                                        </path>
                                    </svg>
                                </div>
                                <p class="name-client">
                                    <%= maestros[i].name %> <%= maestros[i].lastname %>
                                        <span>Maestro
                                            <br>
                                            <br>
                                            <%= maestros[i].mail %>
                                        </span>
                                </p>
                                <div class="social-media">
                                    <a href="#"
                                        onclick="confirmar_maestro(<%= maestros[i].id %>, '<%= maestros[i].name %>')">Eliminar</a>
                                    <a href="#"
                                        onclick="editar_maestro(<%= maestros[i].id %>, '<%= maestros[i].name %>', '<%= maestros[i].lastname %>')">Editar</a>
                                </div>
                            </div>
                        </td>
                        <% } %>
                            </tr>
                </table>
    </div>

